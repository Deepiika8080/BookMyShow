{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "typeRoots": ["./node_modules/@types","./src/types"],
        "baseUrl": ".", 
        "paths": {
          "@repo/db/*": [
            "node_modules/@repo/db/*",  
            "../packages/db/*"  
          ],
          "@repo/types/*": [
            "node_modules/@repo/types/*",  
            "../packages/types/*"
          ]
        }
    }
}